{
    "include": [
        "env.d.ts", 
        "src/**/*", 
        "src/**/*.vue", 
        "src/**/*.vrm", 
        "src/**/*.fcl", 
        "src/**/*.fbx"
    ],
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "baseUrl": ".",
      "outDir": "./dist",
      "strict": true,
      "jsx": "preserve",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": false,
      "strictNullChecks": false,
      "allowUnreachableCode": true,
      "skipLibCheck": true,
      "typeRoots": [
        "./node_modules/@types"
      ],
      "paths": {
        "@/*": ["src/*"],
        "@assets/*": ["src/assets/*"],
        "@style/*": ["src/style/*"],
        "@utils/*": ["src/utils/*"],
        "@components/*": ["src/components/*"]
      }
    }
  }
  